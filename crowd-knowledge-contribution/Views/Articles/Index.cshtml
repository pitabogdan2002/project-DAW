@model crowd_knowledge_contribution.Models.Article

@{
    ViewBag.Title = "Index";
}

<h2>Afisare articole</h2>

<br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}


<div class="d-flex justify-content-center">

    <a class="btn btn-outline-success" href="/Favorites/Index/">Afisare favorite</a>
    <a class="btn btn-outline-success" href="/Categories/Index/">Afisare categorii</a>
    <br />
    <a class="btn btn-outline-success" href="/Articles/New">Adauga articol</a>
    <br />

</div>

<br />


    <label>Ordonati articolele</label>
    <button class="btn btn-outline-success" type="submit"> @Html.ActionLink("A-Z", "Index", new {Criteriul = "Alfabetic"}) </button>
<button class="btn btn-outline-success" type="submit"> @Html.ActionLink("Z-A", "Index",  new {Criteriul = "Alfabetic_Inv"}) </button>
<button class="btn btn-outline-success" type="submit"> @Html.ActionLink("Cele mai vechi", "Index",  new {Criteriul = "Data"}) </button>
<button class="btn btn-outline-success" type="submit"> @Html.ActionLink("Cele mai recente", "Index",  new {Criteriul = "Data_Inv"})  </button>




@* Motorul de cautare *@
<form method="GET">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search topics or keywords" name="search"
               value="@ViewBag.SearchString">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </div>
</form>

